# Expense Tracker

# Data structure to store expenses
expenses = []

# Function to add an expense
def add_expense():
    name = input("Enter expense name: ")
    amount = float(input("Enter expense amount: "))
    expense = {"name": name, "amount": amount}
    expenses.append(expense)
    print(f"Expense '{name}' of amount {amount} added successfully!\n")

# Function to view all expenses
def view_expenses():
    if not expenses:
        print("No expenses recorded yet.\n")
    else:
        print("Here are all the expenses:\n")
        total_amount = 0
        for idx, expense in enumerate(expenses, start=1):
            print(f"{idx}. {expense['name']} - ${expense['amount']}")
            total_amount += expense['amount']
        print(f"\nTotal expenses: ${total_amount}\n")

# Function to delete an expense
def delete_expense():
    view_expenses()
    if expenses:
        try:
            expense_number = int(input("Enter the number of the expense to delete: "))
            if 1 <= expense_number <= len(expenses):
                removed_expense = expenses.pop(expense_number - 1)
                print(f"Expense '{removed_expense['name']}' deleted successfully!\n")
            else:
                print("Invalid number. Please try again.\n")
        except ValueError:
            print("Please enter a valid number.\n")

# Main program loop
def main():
    while True:
        print("Expense Tracker Menu")
        print("1. Add Expense")
        print("2. View Expenses")
        print("3. Delete Expense")
        print("4. Exit")
        
        choice = input("Choose an option: ")

        if choice == "1":
            add_expense()
        elif choice == "2":
            view_expenses()
        elif choice == "3":
            delete_expense()
        elif choice == "4":
            print("Exiting the expense tracker. Goodbye!")
            break
        else:
            print("Invalid choice. Please try again.\n")

if __name__ == "__main__":
    main()
